{
  "name": "clash-of-clanks",
  "version": "0.1.0",
  "description": "Farcaster-native prediction market game for Clanker token battles",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:contracts": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network base",
    "verify": "hardhat verify",
    "security:audit": "ts-node scripts/security/solodit-audit.ts",
    "security:check": "echo 'Running security checks...' && npm run test && npm run security:audit"
  },
  "dependencies": {
    "@farcaster/miniapp-sdk": "latest",
    "@rainbow-me/rainbowkit": "^2.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.10.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "hardhat": "^2.19.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
